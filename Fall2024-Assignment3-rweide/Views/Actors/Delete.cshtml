@model Fall2024_Assignment3_rweide.Models.Actor

@{
    ViewData["Title"] = "Delete an Actor";
}

<h1 class="title-font">Delete @Model.Name</h1>

<h3 class="title-font">Are you sure you want to delete this?</h3>
<div>
    <h4 class="title-font">Actor</h4>
    <hr />
    <dl class="row script-font">
        <dt class="col-sm-2">
            IMDB Actor ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IMDBActorID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10 title-font">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        @if (Model.Photo != null)
        {
            var base64 = Convert.ToBase64String(Model.Photo);
            var imgSrc = $"data:image/jpg;base64,{base64}";
            <dt class="col-sm-2">
                Profile Picture
            </dt>
            <dd class="col-sm-10">
                <img src="@imgSrc" width="100" height="100" style="border-radius:50%" />
            </dd>
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
