@model IEnumerable<Fall2024_Assignment3_rweide.Models.Movie>

@{
    ViewData["Title"] = "Movie List";
}

<h1 class="title-font">Movie List</h1>

<p class="title-font">
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                IMDB Link
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                Year of Release
            </th>
            <th>
                Poster image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="script-font">
@foreach (var item in Model) {
        <tr>
            <td>
                <a href="https://www.imdb.com/title/@item.IMDBMovieID">Link</a>
            </td>
            <td class="title-font">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfRelease)
            </td>
            <td>
                @if (item.Photo != null)
                {
                    var base64 = Convert.ToBase64String(item.Photo);
                    var imgSrc = $"data:image/jpg;base64,{base64}";
                    <img src="@imgSrc" width="100" height="150" />
                }
                else
                {
                    <p>No photo found.</p>
                }
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
