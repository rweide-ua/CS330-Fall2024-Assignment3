@model Fall2024_Assignment3_rweide.Models.Movie

@{
    ViewData["Title"] = "Delete a Movie";
}

<h1>Delete @Model.Name</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IMDBMovieID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IMDBMovieID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.YearOfRelease)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YearOfRelease)
        </dd>
        @if (Model.Photo != null)
        {
            var base64 = Convert.ToBase64String(Model.Photo);
            var imgSrc = $"data:image/jpg;base64,{base64}";
            <dt class="col-sm-2">
                Poster image
            </dt>
            <dd class="col-sm-10">
                <img src="@imgSrc" width="100" height="100" style="border-radius:50%" />
            </dd>
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
