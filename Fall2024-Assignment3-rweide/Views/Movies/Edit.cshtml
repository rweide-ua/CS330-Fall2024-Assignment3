@model Fall2024_Assignment3_rweide.Models.Movie

@{
    ViewData["Title"] = "Edit a Movie";
}

<h1 class="title-font">Edit @Model.Name</h1>

<h4 class="title-font">Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4 script-font">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IMDBMovieID" class="control-label">IMDB Movie ID (i.e. the tt4154796 in https://www.imdb.com/title/<strong>tt4154796</strong>/)</label>
                <input asp-for="IMDBMovieID" class="form-control" />
                <span asp-validation-for="IMDBMovieID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearOfRelease" class="control-label">Year of Release</label>
                <input asp-for="YearOfRelease" class="form-control" />
                <span asp-validation-for="YearOfRelease" class="text-danger"></span>
            </div>
            @if (Model.Photo != null)
            {
                var base64 = Convert.ToBase64String(Model.Photo);
                var imgSrc = $"data:image/jpg;base64,{base64}";
                <div class="form-group">
                    <label for="CurrentPoster">Current Poster</label><br />
                    <img name="CurrentPoster" src="@imgSrc" width="100" height="150" />
                </div>
            }
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input type="file" id="Photo" name="Photo" class="form-control" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
