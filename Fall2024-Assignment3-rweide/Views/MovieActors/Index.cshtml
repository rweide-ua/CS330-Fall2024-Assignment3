@model IEnumerable<Fall2024_Assignment3_rweide.Models.MovieActor>

@{
    ViewData["Title"] = "Castings List";
}

<h1 class="title-font">Castings List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead class="title-font">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="script-font">
@foreach (var item in Model) {
        <tr>
            <td class="title-font">
                @Html.DisplayFor(modelItem => item.Movie.Name)
            </td>
            <td class="title-font">
                @Html.DisplayFor(modelItem => item.Actor.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
